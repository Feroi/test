{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

  <div class="container content">
    <div class="row">
      <div class="col-sm-12">
        <h2>Product Info</h2>

        <table class="table mt-5">
          <tbody>
            <tr>
              <th>ID</th>
              <td>{{ product.id }}</td>
            </tr>
            <tr>
              <th>Reference</th>
              <td>{{ product.reference }}</td>
            </tr>
            <tr>
              <th>Name</th>
              <td>{{ product.name }}</td>
            </tr>
            <tr>
              <th>Description</th>
              <td>{{ product.description }}</td>
            </tr>
            <tr>
              <th>Cover Image</th>
              <td>{{ product.coverImage }}</td>
            </tr>
            <tr>
              <th>Price</th>
              <td>{{ product.price }}</td>
            </tr>
            <tr>
              <th>Stock</th>
              <td>{{ product.stock }}</td>
            </tr>
            <tr>
              <th>Category</th>
              <td>{{ product.typeProduct.name }}</td>
            </tr>
          </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_product_index') }}">Back to list</a>

        <a class="btn btn-success" href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>

        {{ include('product/_delete_form.html.twig') }}

      </div>
    </div>
  </div>
{% endblock %}
